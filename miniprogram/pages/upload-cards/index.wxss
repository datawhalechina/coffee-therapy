/* miniprogram/pages/upload-cards/index.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.upload-btn {
  background: linear-gradient(45deg, #4CAF50, #8BC34A);
}

.upload-btn[disabled] {
  background: linear-gradient(45deg, #ccc, #ddd);
  color: #999;
}

.validate-btn {
  background: linear-gradient(45deg, #2196F3, #03A9F4);
}

.clear-btn {
  background: linear-gradient(45deg, #F44336, #E91E63);
}

.logs-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.logs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.logs-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.logs-actions {
  display: flex;
  gap: 10rpx;
}

.mini-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.mini-btn:active {
  background: #e0e0e0;
}

.logs-container {
  max-height: 600rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.log-item {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 10rpx;
  padding: 8rpx 12rpx;
  background: white;
  border-radius: 8rpx;
  border-left: 4rpx solid #4CAF50;
  word-break: break-all;
}

.log-item:last-child {
  margin-bottom: 0;
}

.empty-logs {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx;
}

.result-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.result-text {
  display: block;
  font-size: 28rpx;
  color: #4CAF50;
  margin-bottom: 15rpx;
}

.result-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.result-details text {
  font-size: 26rpx;
  color: #666;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
} 