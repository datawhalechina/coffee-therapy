/* text-input/index.wxss */
page {
  background-color: #FFF8EE;
}

.page-container {
  padding: 30rpx;
  background-color: #FFF8EE;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题样式 */
.header-section {
  margin-bottom: 40rpx;
  position: relative;
}

.header-section::after {
  content: "";
  position: absolute;
  bottom: -15rpx;
  left: 0;
  width: 80rpx;
  height: 6rpx;
  background-color: #FF9D2F;
  border-radius: 6rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 灵感提示卡片 */
.inspiration-card {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 157, 47, 0.05);
  border-left: 8rpx solid #FF9D2F;
  overflow: hidden;
}

.tip-icon {
  color: #FF9D2F;
  font-size: 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tip-list {
  padding-left: 10rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 文本输入区域 */
.textarea-container {
  margin-bottom: 40rpx;
}

.text-input-area {
  min-height: 300rpx;
  border-radius: 16rpx !important;
  border: 2rpx solid rgba(255, 157, 47, 0.2) !important;
  padding: 20rpx !important;
  font-size: 30rpx !important;
  background-color: #fff !important;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.character-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 16rpx;
}

/* 示例文本快速选择 */
.example-section {
  margin-bottom: 60rpx;
}

.example-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.example-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.example-tag {
  margin-right: 0 !important;
  border-radius: 30rpx !important;
  padding: 12rpx 24rpx !important;
  font-size: 26rpx !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 生成按钮 */
.generate-btn {
  border-radius: 16rpx !important;
  margin-bottom: 30rpx;
}

/* 按钮内容样式 */
.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

.btn-icon {
  margin-left: 10rpx;
}
