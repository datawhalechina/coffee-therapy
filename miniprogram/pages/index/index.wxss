/**index.wxss**/
page {
  background-color: #ffffff;
}

.page-container {
  padding: 30rpx;
}

/* 欢迎横幅样式 */
.welcome-banner {
  background: linear-gradient(135deg, #FF9D2F 0%, #FFBD6B 100%);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  color: white;
  overflow: hidden;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 方法卡片样式 */
.method-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.method-card {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 157, 47, 0.1);
}

.method-card-inner {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.feature-icon {
  font-size: 80rpx;
  color: #FF9D2F;
  margin-bottom: 20rpx;
}

.method-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.method-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.method-tip {
  background-color: rgba(255, 157, 47, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  width: 100%;
  text-align: left;
  display: flex;
  align-items: center;
}

.tip-icon {
  color: #FF9D2F;
  margin-right: 10rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 特殊卡片样式 */
.special-card {
  position: relative;
  background: linear-gradient(135deg, #FF9D2F 0%, #FFB84D 50%, #FF8A00 100%);
  color: white;
}

.special-card .method-card-inner {
  color: white;
}

.special-card .feature-icon {
  color: white;
}

.special-card .method-tip {
  background-color: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.95);
}

/* 加载状态覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  text-align: center;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
