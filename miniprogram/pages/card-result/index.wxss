/* General Page Styles */
page {
  background-color: #F4F0EA; /* 简化背景颜色 */
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: #333;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Overall Container for the new layout */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  align-items: stretch;
  background-color: #F4F0EA;
}

/* Header from Prototype - 按照图片设计 */
.header-prototype {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 15rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.date-section {
  text-align: left;
}

.date-day {
  font-size: 88rpx; /* 稍微调小 */
  font-weight: bold;
  color: #333;
  line-height: 0.9;
}

.date-month-year {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.title-prototype {
  font-size: 26rpx;
  color: #999;
  text-align: right;
  padding-top: 8rpx;
}

/* Card from Prototype - 艺术化设计，专注大文字效果 */
.card-prototype {
  background-color: #CBCBE7;
  border-radius: 40rpx;
  margin: 40rpx 0 25rpx 0;
  color: #595880;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  min-height: 750rpx; /* 进一步增加高度 */
  width: 100%;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.reminder-label {
  font-size: 18rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
  align-self: flex-start;
  position: absolute;
  top: 45rpx;
  left: 45rpx;
  z-index: 2;
}

.reminder-line {
  height: 1rpx;
  background-color: currentColor;
  width: 100rpx;
  margin-bottom: 0;
  opacity: 0.3;
  position: absolute;
  top: 85rpx;
  left: 45rpx;
  z-index: 2;
}

.quote-prototype {
  font-size: 52rpx; /* 更大的字体 */
  line-height: 1.3;
  margin: 0;
  padding: 60rpx 30rpx;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  word-break: break-word;
  font-weight: 600;
  letter-spacing: 2rpx;
  max-width: 100%;
  font-family: "PingFang SC", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  z-index: 1;
  position: relative;
}

.author-prototype {
  font-size: 22rpx;
  text-align: center;
  margin-top: auto;
  opacity: 0.6;
  position: absolute;
  bottom: 45rpx;
  right: 45rpx;
  font-style: italic;
  letter-spacing: 1rpx;
  z-index: 2;
  font-weight: 400;
}

/* Buttons from Prototype - 简化按钮设计 */
.buttons-container-prototype {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  padding: 20rpx 0;
  width: 100%;
}

.button-prototype {
  flex: 1;
  background-color: #E9E4D9;
  color: #7A7A7A;
  border-radius: 50rpx;
  padding: 32rpx 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  line-height: normal;
  margin: 0;
}

.button-prototype::after {
  border: none;
}

.button-prototype:active {
  background-color: #DCD5CA;
  transform: translateY(2rpx);
}
