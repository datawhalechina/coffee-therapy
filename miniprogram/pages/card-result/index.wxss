/* General Page Styles */
page {
  background-color: #F4F0EA; /* 简化背景颜色 */
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: #333;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Overall Container for the new layout */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
  min-height: 100vh;
  align-items: stretch;
}

/* Header from Prototype - 按照图片设计 */
.header-prototype {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.date-section {
  text-align: left;
}

.date-day {
  font-size: 96rpx; /* 更大的日期数字 */
  font-weight: bold;
  color: #333;
  line-height: 0.9;
}

.date-month-year {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.title-prototype {
  font-size: 28rpx;
  color: #999;
  text-align: right;
  padding-top: 10rpx;
}

/* Card from Prototype - 简化设计，专注文字和颜色 */
.card-prototype {
  background-color: #CBCBE7;
  border-radius: 40rpx;
  padding: 60rpx 50rpx;
  margin: 40rpx 0 60rpx 0;
  color: #595880;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 600rpx; /* 增加最小高度 */
  width: 100%;
  box-sizing: border-box;
}

.reminder-label {
  font-size: 24rpx;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 15rpx;
  opacity: 0.8;
}

.reminder-line {
  height: 2rpx;
  background-color: currentColor;
  margin-bottom: 50rpx;
  opacity: 0.6;
}

.quote-prototype {
  font-size: 40rpx;
  line-height: 1.8;
  margin-bottom: 50rpx;
  flex-grow: 1;
  display: block;
  word-break: break-word;
  font-weight: 400;
}

.author-prototype {
  font-size: 28rpx;
  text-align: left;
  margin-top: auto;
  opacity: 0.8;
}

/* Buttons from Prototype - 简化按钮设计 */
.buttons-container-prototype {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  padding: 20rpx 0;
  width: 100%;
}

.button-prototype {
  flex: 1;
  background-color: #E9E4D9;
  color: #7A7A7A;
  border-radius: 50rpx;
  padding: 32rpx 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  line-height: normal;
  margin: 0;
}

.button-prototype::after {
  border: none;
}

.button-prototype:active {
  background-color: #DCD5CA;
  transform: translateY(2rpx);
}
