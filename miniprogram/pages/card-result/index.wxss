/* 页面容器 */
page {
  background-color: #f8f8f8;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 顶部标题区域 */
.header-section {
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.header-section::after {
  content: "";
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 80rpx;
  height: 6rpx;
  background-color: #FFB156;
  border-radius: 6rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 卡片容器 */
.card-container {
  perspective: 2000rpx;
  width: 100%;
  height: 900rpx;
  margin: 0 auto 60rpx;
}

.card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.8s;
  transform-style: preserve-3d;
}

.card-inner.flipped {
  transform: rotateY(180deg);
}

.card-face {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-front {
  background-color: #fff;
}

.card-back {
  transform: rotateY(180deg);
}

/* 卡片图片 */
.card-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

/* 图片加载状态容器 */
.image-loading-container {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
  border-radius: 24rpx;
}

.custom-loading {
  margin-bottom: 20rpx;
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  padding: 0 30rpx;
}

.card-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  color: white;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
}

.card-text {
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  text-align: center;
  background: linear-gradient(135deg, #FFF8EE 0%, #FFE8CC 100%);
  box-sizing: border-box;
}

.card-quote {
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: 500;
  margin: 40rpx 0;
  color: #333;
}

.card-author {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

.tap-hint {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: white;
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  background-color: rgba(0,0,0,0.5);
  border-radius: 40rpx;
  margin: 0 auto;
  width: fit-content;
  display: flex;
  align-items: center;
  animation: pulse 2s infinite;
  z-index: 10;
}

.tap-hint.dark {
  background-color: rgba(255,255,255,0.8);
  color: #666;
}

.hint-text {
  margin-left: 8rpx;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.6;
  }
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border-radius: 32rpx;
  background-color: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 160rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(6rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 相关推荐 */
.recommendations {
  margin: 60rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 30rpx;
}

.recommendation-scroll {
  white-space: nowrap;
  display: flex;
}

.recommendation-card {
  display: inline-block;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  background-color: white;
  margin-right: 30rpx;
  width: 300rpx;
  flex-shrink: 0;
}

.recommendation-card:active {
  transform: scale(0.98);
}

.recommendation-image {
  width: 300rpx;
  height: 200rpx;
}

.recommendation-info {
  padding: 20rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.recommendation-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}
