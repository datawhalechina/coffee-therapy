.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.gif-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  backgroundColor:#ffffff;
}

.loading-gif {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
} 